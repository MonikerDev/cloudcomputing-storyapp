<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - cst_323___clc_test_app</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/cst_323___clc_test_app.styles.css" asp-append-version="true" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <div class="container-fluid">
            <!-- Navbar Brand-->
            <p class="navbar-brand ps-3 me-auto">StoryBuilder.io</p>
            <!-- Sidebar Toggle-->
            <button class="btn btn-link btn-sm me-3 me-lg-0" id="sidebarToggle" href="#!">
                <i class="fas fa-bars"></i>
            </button>
            <!-- Navbar Search-->
            <!-- Navbar-->
        </div>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Dashboard Menu</div>
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                            Home
                        </a>
                        <a class="nav-link" asp-controller="Story" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-book"></i></div>
                            Manage Stories
                        </a>
                        <a class="nav-link" asp-controller="Story" asp-action="CreateStory">
                            <div class="sb-nav-link-icon"><i class="fas fa-pen"></i></div>
                            Create Stories
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <a class="nav-link" asp-controller="User" asp-action="Signout">
                        <i class="fas fa-sign-out-alt"></i> Sign Out
                    </a>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">

            <!-- CONTENT -->
            <div class="container">
                <main role="main" class="pb-3 m-3">
                    @RenderBody()
                </main>
            </div>
            <!-- CONTENT -->
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

