@model cst_323___clc_test_app.Models.Story

<div class="container col-xxl-8 px-4 py-5">
    <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
        <div class="col-10 col-sm-8 col-lg-6">
            <img src="~/assets/undraw_book_lover_re_rwjy.svg" class="img-fluid" alt="Example image" width="700" height="500" loading="lazy">
        </div>
        <div class="col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">Story</h1>
            <hr />
            <div class="row">
                    <form asp-action="AddStory">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="title" class="control-label"></label>
                            <input asp-for="title" class="form-control" />
                            <span asp-validation-for="title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="premise" class="control-label"></label>
                        <textarea asp-for="premise" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="premise" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="genre" class="control-label"></label>
                            <input asp-for="genre" class="form-control" />
                            <span asp-validation-for="genre" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                            <div class="form-group">
                                <input type="submit" class="btn btn-primary btn-lg px-4 me-md-2" value="Create" />
                             </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
